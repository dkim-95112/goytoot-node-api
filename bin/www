#!/usr/bin/env node
"use strict";
const express = require('express');
const appServerInit = require('../app');
const MyMongoClient = require('../mongoclient');
const WebSocketServer = require('../websocket');

const port = normalizePort(process.env.PORT || '3000');
const app = express();
const server = app.locals.server = appServerInit(app, port);
const webSocketServer = app.locals.webSocketServer = new WebSocketServer(server);
const mongoClient = app.locals.mongoClient = new MyMongoClient();
mongoClient.connect()
    .then(() => {
        mongoClient.watchTweets(webSocketServer.nConnections);
    })

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
    const port = parseInt(val, 10);

    if (isNaN(port)) {
        // named pipe
        return val;
    }

    if (port >= 0) {
        // port number
        return port;
    }

    return false;
}

