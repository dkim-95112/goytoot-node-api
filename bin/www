#!/usr/bin/env node
"use strict";
require('dotenv').config() // Has to be first, otherwise 'debug' package doesn't print
const fs = require('fs');
fs.readFile(process.env.DKIM_PRIVATE_KEY_PATH, (err, data) => {
  if (err) {
    throw err;
  }
  process.env.DKIM_PRIVATE_KEY = data;
})
const express = require('express');
const appServerInit = require('../app');

const port = normalizePort(process.env.PORT || '3001');
const app = express();
appServerInit(app, port);

/**
 * Normalize a port into a number, string, or false.
 */
function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}
